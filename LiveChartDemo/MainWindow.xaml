<Window x:Class="LiveChartDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:LiveChartDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Canvas Grid.Row="0" Grid.Column="0" Name="Canvas" Margin="-4, 0, 0, 20">

            <lvc:CartesianChart x:Name="chart" Height="{Binding ElementName=Canvas, Path=ActualHeight}" Width="{Binding ElementName=Canvas, Path=ActualWidth}"/>
            <Button x:Name="but1" Canvas.Left="60" Canvas.Top="20" Height="40" Width="120" Content="Press Me" Click="but1_Click"/>

        </Canvas>
            
        
        
    </Grid>
</Window>
